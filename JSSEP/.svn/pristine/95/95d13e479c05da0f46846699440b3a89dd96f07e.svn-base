/*下划线样式的标签页*/
ul.nav-tabs-underline{border: 0px;margin-bottom: 20px;}
ul.nav-tabs-underline li.active{border-bottom: 3px solid #3C8DBC}
ul.nav-tabs-underline li a{border: 0px;color: #666;font-size: 16px;}
ul.nav-tabs-underline li a:hover,
ul.nav-tabs-underline li a:focus{background-color: white;color: #666;}
ul.nav-tabs-underline li.active a,
ul.nav-tabs-underline li.active a:hover,
ul.nav-tabs-underline li.active a:focus{border: 0px;background-color: white;color: #222;}

/*目录编目样式*/
.prepare-process{margin-bottom: 0px;margin-top: 4px;cursor: pointer;}
.block-message{display:none;position: fixed;background: white;z-index: 100;}
.block-content{border: 1px solid #ccc; padding: 10px 15px 15px 15px;-moz-box-shadow: 0px 0px 20px #666;box-shadow: 0px 0px 20px #666;-webkit-box-shadow: 0px 0px 20px #666;}
.block-content table{margin: 0px}
.block-content table .detail > td{padding: 0px !important;}
.block-content table .detail,.detail-content{display: none;}
.block-content table .detail-content{padding: 5px 8px}
.block-content .table-nobody td{border: 0px;border-bottom: 0px !important;padding: 4px 4px 0px 0px !important;}

/*资源分类页面样式*/
.resourceclassify-content{position: relative;height: 100%;margin-bottom: 0px}
.resourceclassify-tree{width: 230px;position: absolute;top: 0px;left: 0px;height: 100%;overflow-y: auto;}
.resourceclassify-table{margin-left: 230px;padding-left: 20px}
ul.nav-tabs-underline li.active a:focus{border: 0px;background-color: white;}
.resourceclassify-tree{margin-top: -1px}
.resourceclassify-tree .panel-body{padding-left: 14px;margin-top: 4px;}
.resourceclassify-tree .title{font-size: 15px}
.resourceclassify-tree .panel-heading{background-color: #f5f5f4; border: 0px;}
.resourceclassify-tree .panel-default{border-radius: 2px; border-color: white; box-shadow: none;margin: 0px;}
.resourceclassify-tree .btns{margin-right: -10px;}
.resourceclassify-tree .font-btn{margin-right: 10px;cursor: pointer;}
.resourceclassify-tree .update{font-size: 16px}


/*资源分类弹出框样式*/
.catalog-dialog .modal-dialog{width: 500px;height: 306px;}
.catalog-dialog-tree .modal-dialog{width:400px;height: 451px;}
.catalog-dialog-tree .modal-body{height:335px;overflow-y: auto;}
.catalog-dialog-tree .modal-footer{padding-top: 15px}

/*列表tab选项卡 提示数字样式*/
.tab-notice-number{float: right;padding: 3px;border-radius: .25em;color: white;font-style:normal;right: 0;top: 0;}

/* 红色提示 */
.prompt{color: #d9534f;padding: 0px !important;}
.prompt .fa{font-size: 16px;cursor: pointer;}
